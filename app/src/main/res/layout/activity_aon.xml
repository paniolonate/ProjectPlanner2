<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nate.projectplanner.AONActivity">


    <!-- Canvas drew by CustomView class -->
    <com.example.nate.projectplanner.views.CustomView
        android:id= "@+id/customView"
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:node_color="@color/nodeColor"


        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_swap_color"
        android:layout_width="wrap_content"
        android:text="SWAP COLOR"
        android:layout_height="wrap_content" />
    
</android.support.constraint.ConstraintLayout>
